<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.eclipse.m2e.core.ui.internal.commands.ShowPhasesAndGoals"
            icon="icons/phasesandgoals.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.project"
            id="org.eclipse.m2e.core.ui.internal.commands.ShowPhasesAndGoals"
            name="Phases And Goals...">
         <defaultHandler
               class="org.eclipse.m2e.core.ui.internal.handlers.ShowPhasesAndGoalsHandler">
         </defaultHandler>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
	<menuContribution
            allPopups="false"
            locationURI="menu:project?after=projectProperties">
         <separator
               name="phasesandgoals.separator"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.m2e.core.ui.internal.commands.ShowPhasesAndGoals"
               label="Phases And Goals..."
               style="push">
            <visibleWhen
                  checkEnabled="true">
               
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <separator
               name="org.eclipse.m2e.core.ui.phasesandgoals.popup.separator1"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.m2e.core.ui.internal.commands.ShowPhasesAndGoals"
               label="Phases And Goals..."
               style="push">
            <visibleWhen
                  checkEnabled="false">
            	<iterate>
	              <adapt
	                    type="org.eclipse.core.resources.IProject">
	                 <and>
	                    <test
	                          property="org.eclipse.core.resources.projectNature"
	                          value="org.eclipse.m2e.core.maven2Nature">
	                    </test>
	                 </and>
	              </adapt>
	           </iterate>
            </visibleWhen>
         </command>
         <separator
               name="org.eclipse.m2e.core.ui.phasesandgoals.popup.separator2"
               visible="true">
         </separator>
      </menuContribution>
   </extension>
</fragment>
